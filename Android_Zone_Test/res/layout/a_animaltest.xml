        android:text="shader研究" />

    <Button
        android:id="@+id/bt_bitmap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:onClick="onClick"
        android:text="Bitmap研究" />

    <Button
        android:id="@+id/bt_MatrixPre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:onClick="onClick"
        android:text="Matrix(MapPoint 、逆向矩阵invert)研究" />

    <Button
        android:id="@+id/bt_canvas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:onClick="onClick"
        android:text="图层研究" />

    <Button
        android:id="@+id/bt_PorterDuff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:onClick="onClick"
        android:text="PorterDuffXfermode1研究" />

